<%= bootstrap_form_for @paymentPerMonth, layout: :horizontal, label_col: "col-sm-4", control_col: "col-sm-5" do |f| %>
  <%= f.text_field :loan %>
  <%= f.text_field :bonus %>
  <%= f.text_field :period %>
  <%= f.text_field :apy %>
  <%= f.form_group control_col:"col-sm-offset-4 col-sm-5" do %>
    <%= f.submit t('.calc'), class: 'btn btn-default' %>
  <% end %>
  <% if @paymentPerMonth.amount != nil %>
    <%= f.static_control label: t('.repayment_per_month') do  %>
      <%= @paymentPerMonth.amount %>
    <% end %>
  <% end %>
<% end %>